[Unit]
Description=Jenkins Continuous Integration Server
Requires=network.target
After=network.target

[Service]
Type=forking
User=jenkins
Group=jenkins
EnvironmentFile=/etc/default/jenkins
ExecStart=/usr/bin/jenkins
Restart=on-failure
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
